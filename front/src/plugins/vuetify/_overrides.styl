@import './_mixins.styl'

::-webkit-scrollbar
  width: 10px !important
  height: 10px !important
  border-radius: 2px !important
  &-corner
    background-color: #23252e !important
  &-track
    background-color: #23252e !important
    box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
  &-thumb
    background: rgba(112, 122, 140, 0.5)
    border-radius: 2px !important
    cursor: pointer !important
    outline: 1px solid slategrey

html
  &.rykn0wxx
    line-height: 1.4
    box-sizing: border-box
    *, *::before, *::after
      box-sizing: border-box
    &.no-sb
      overflow: unset
    [tabindex='-1']:focus
      outline: none
    select, button, textarea, input
      vertical-align: baseline
    input[type="reset"], input[type="submit"], input[type="button"], button
      cursor: pointer
      -webkit-appearance: button
      &[disabled]
        cursor: default
    textarea
      vertical-align: top
      overflow: auto
    input
      &[type="search"]
        -webkit-appearance: textfield
        box-sizing: content-box
        -webkit-box-sizing: content-box
        &::-webkit-search-decoration, &::-webkit-search-cancel-button
          -webkit-appearance: none
      &:-webkit-autofill
        text-shadow: none

.rykn0wxx, .mudhead
  text-rendering: optimizeLegibility
  height: 100%
  position: relative
  [v-cloak], [data-v-cloak], [x-v-cloak]
    display: none !important

.mudhead
  margin: 0
  padding: 0

html.rykn0wxx, body.mudhead
  -webkit-tap-highlight-color: rgba(0,0,0,0)
  -webkit-touch-callout: none
  min-height: 100%
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.rykn0wxx
  h1, h1, h3, h4, h5, h6
    line-height: 1.2
    color: inherit
    font-weight: 400
  &, button, select, textarea, input
    font-family: $body-font-family
  select, button, textarea, input
    font-size: 100%
  a
    text-decoration: none
    &:focus, &:active
      outline: none

[data-vue-meta='is-landing']
  &, .mudhead
    height 100%


.rykn0wxx
  .app-toolbar
    box-shadow: 0px 23px 30px -20px rgba(0,0,0,0.4)
    .app__router--link
      perspective: 1000px
      transition: all 200ms ease-in-out
      border-radius: 0
      &--active
        box-shadow: 0px -4px 0px $accent.light inset
        background: rgba(0,0,0,0.6) !important
      &:hover
        background: #444
    .v-tabs
      &__container
        perspective: 1000px
      &__div
        &.app-trans
          transition: all 200ms ease-in-out
        &:hover
          .v-tabs__item
            background: #444
        .v-tabs__item
          &.tab--active
            box-shadow: 0px -4px 0px $accent.light inset
            background: rgba(0,0,0,0.6)
  layout-for-name()